{
  "name": "C# (.NET) Dev Container",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
        "version": "9.0",
        "additionalVersions": "8.0"
    }
  },
  "postCreateCommand": "sh .devcontainer/init.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.csdevkit",
        "csharpier.csharpier-vscode",
        "github.copilot"
      ]
    },
    "codespaces": {
      "repositories": {
        "bmazzarol/Tuxedo": {
          "permissions": "write-all"
        },
        "bmazzarol/Bunsen-Burner": {
          "permissions": "write-all"
        },
        "bmazzarol/Eon": {
          "permissions": "write-all"
        },
        "bmazzarol/Http-BuildR": {
          "permissions": "write-all"
        },
        "bmazzarol/Icicle": {
          "permissions": "write-all"
        },
        "bmazzarol/docfx.result-snippets": {
          "permissions": "write-all"
        },
        "bmazzarol/Cutout": {
          "permissions": "write-all"
        },
        "bmazzarol/Polyglot.Notebook.Docfx.Plugin": {
          "permissions": "write-all"
        }
      }
    }
  }
}
